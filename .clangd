# clangd configuration for JOLTrl with Jolt Physics
# Generated for Bazel + hedron_compile_commands integration

CompileFlags:
  # Point to the compilation database generated by hedron_compile_commands
  CompilationDatabase: "."
  
  # Global C++17 standard and AVX2/FMA for performance-critical code
  Add: ["-std=c++17", "-mavx2", "-mfma", "-I."]

# Diagnostics: disable noisy warnings
Diagnostics:
  UnusedIncludes: Strict
  Suppress:
    - cppcoreguidelines-pro-type-vararg
    - hicpp-vararg
    - cert-dcl50-cpp
    - readability-magic-numbers
    - cppcoreguidelines-avoid-magic-numbers
    - readability-identifier-length

# Inlay hints for better code understanding
InlayHints:
  ParameterNames: true
  DeducedTypes: true

# Completion settings
Completion:
  AllScopes: true
